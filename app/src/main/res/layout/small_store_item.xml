<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_small_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/small_store_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_small_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="켄홈"
        android:textColor="@color/bottom_main_b"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_small_img"
        app:layout_constraintTop_toBottomOf="@id/iv_small_img" />

    <ImageView
        android:id="@+id/iv_small_rating"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/rating"
        app:layout_constraintStart_toStartOf="@id/tv_small_name"
        app:layout_constraintTop_toBottomOf="@id/tv_small_name" />

    <TextView
        android:id="@+id/tv_small_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="4.8"
        android:textColor="@color/bottom_main_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_small_rating"
        app:layout_constraintStart_toEndOf="@+id/iv_small_rating"
        app:layout_constraintTop_toTopOf="@+id/iv_small_rating" />

    <TextView
        android:id="@+id/tv_small_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="(124)"
        android:textColor="@color/bottom_main_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_small_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_small_rating"
        app:layout_constraintTop_toTopOf="@+id/iv_small_rating" />

    <TextView
        android:id="@+id/tv_small_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="·"
        android:textColor="@color/bottom_main_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_small_rating"
        app:layout_constraintStart_toEndOf="@id/tv_small_review"
        app:layout_constraintTop_toTopOf="@+id/iv_small_rating" />

    <TextView
        android:id="@+id/tv_small_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="0.5km"
        android:textColor="@color/bottom_main_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_small_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_small_dot"
        app:layout_constraintTop_toTopOf="@+id/iv_small_rating" />

    <TextView
        android:id="@+id/tv_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="무료배달"
        android:textColor="@color/bottom_main_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_small_rating"
        app:layout_constraintTop_toBottomOf="@+id/iv_small_rating" />

</androidx.constraintlayout.widget.ConstraintLayout>