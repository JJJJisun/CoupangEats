<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.main.fragment.home.cart.CartActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_nestScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_cart_cancel"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/canceel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="@string/cart_top"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ib_cart_cancel"
                app:layout_constraintStart_toEndOf="@+id/ib_cart_cancel"
                app:layout_constraintTop_toTopOf="@+id/ib_cart_cancel" />

            <TextView
                android:id="@+id/tv_cart_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="마포구청"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ib_cart_cancel"
                app:layout_constraintTop_toBottomOf="@id/ib_cart_cancel" />

            <TextView
                android:id="@+id/tv_cart_text_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="(으)로"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_text"
                app:layout_constraintStart_toEndOf="@id/tv_cart_text"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_text" />

            <TextView
                android:id="@+id/tv_cart_text_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="배달"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_text"
                app:layout_constraintStart_toEndOf="@id/tv_cart_text_o"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_text" />

            <TextView
                android:id="@+id/tv_cart_text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="서울 마포구 월드컵로 212"
                android:textColor="@color/bottom_text_w"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/ib_cart_cancel"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_text" />

            <TextView
                android:id="@+id/tv_cart_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="수정"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_text_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_text" />

            <View
                android:id="@+id/divider_cart_top"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="18dp"
                android:background="@color/main_bold_divider"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_text_detail" />

            <TextView
                android:id="@+id/tv_cart_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="낙지천국 은평구점"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_cart_top" />

            <View
                android:id="@+id/divider_cart_1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="12dp"
                android:background="@color/divider_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/tv_cart_store" />

            <TextView
                android:id="@+id/tv_cart_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/menu_name"
                android:textColor="@color/text_474E58"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_cart_store"
                app:layout_constraintTop_toBottomOf="@id/divider_cart_1" />

            <TextView
                android:id="@+id/tv_cart_menu_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2인"
                android:textColor="@color/bottom_text_w"
                app:layout_constraintStart_toStartOf="@+id/tv_cart_menu_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_menu_name" />

            <TextView
                android:id="@+id/tv_cart_menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/menu_price"
                android:textColor="@color/text_474E58"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_cart_menu_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_menu_option" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/menu_cancle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_menu_name" />

            <ImageView
                android:id="@+id/box_count"
                android:layout_width="86dp"
                android:layout_height="34dp"
                android:background="@drawable/button_box"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_menu_price" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="1"
                android:textColor="@color/bottom_main_b"
                app:layout_constraintBottom_toBottomOf="@+id/box_count"
                app:layout_constraintStart_toStartOf="@+id/box_count"
                app:layout_constraintTop_toTopOf="@+id/box_count" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="6dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/arrow_low"
                app:layout_constraintBottom_toBottomOf="@+id/box_count"
                app:layout_constraintEnd_toEndOf="@+id/box_count"
                app:layout_constraintTop_toTopOf="@+id/box_count" />

            <View
                android:id="@+id/divider_price"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="40dp"
                android:background="@color/divider_f2f2f2"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_menu_price" />

            <TextView
                android:id="@+id/tv_menu_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="+ 메뉴추가"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_price" />

            <View
                android:id="@+id/divider_cart_middle"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/main_bold_divider"
                app:layout_constraintTop_toBottomOf="@+id/tv_menu_plus" />

            <TextView
                android:id="@+id/tv_cart_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:text="할인쿠폰"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_cart_middle" />

            <ImageView
                android:id="@+id/iv_coupon_box"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/button_box"
                android:backgroundTint="@color/main_bold_divider"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_coupon" />

            <TextView
                android:id="@+id/tv_cart_coupon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="사용 가능 쿠폰"
                android:textColor="@color/text_474E58"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/iv_coupon_box" />

            <TextView
                android:id="@+id/tv_cart_coupon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0장"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_coupon_text"
                app:layout_constraintStart_toEndOf="@+id/tv_cart_coupon_text"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_coupon_text" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/arrow_blue"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_coupon_count"
                app:layout_constraintStart_toEndOf="@+id/tv_cart_coupon_count"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_coupon_count" />

            <ImageView
                android:id="@+id/iv_coupon_box_box"
                android:layout_width="240dp"
                android:layout_height="44dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_box"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="@+id/tv_cart_coupon_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_coupon_text" />

            <ImageView
                android:id="@+id/iv_coupon_box_blue"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_blue_box"
                app:layout_constraintBottom_toBottomOf="@+id/iv_coupon_box_box"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/iv_coupon_box_box" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="쿠폰을 선택해주세요"
                android:textColor="@color/bottom_text_w"
                app:layout_constraintBottom_toBottomOf="@+id/iv_coupon_box_box"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box_box"
                app:layout_constraintTop_toTopOf="@+id/iv_coupon_box_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textColor="@color/main_color"
                app:layout_constraintBottom_toBottomOf="@+id/iv_coupon_box_blue"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box_blue"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box_blue"
                app:layout_constraintTop_toTopOf="@+id/iv_coupon_box_blue" />

            <!--주문금액-->
            <TextView
                android:id="@+id/tv_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="주문금액"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toBottomOf="@+id/iv_coupon_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/menu_price"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_price"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_price" />

            <!--배달비-->
            <TextView
                android:id="@+id/tv_cart_del_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="배달비"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_price" />

            <TextView
                android:id="@+id/tv_cart_del_pice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="5,500"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_del_price"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_del_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_del_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_cart_del_pice_text"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_del_price" />

            <!--쿠팡캐시-->
            <TextView
                android:id="@+id/tv_cart_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="쿠팡캐시"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_del_price" />

            <ImageView
                android:id="@+id/iv_cash_box"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_box"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_cash"
                app:layout_constraintStart_toEndOf="@+id/tv_cart_cash"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_cash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전액사용"
                android:textColor="@color/bottom_main_b"
                app:layout_constraintBottom_toBottomOf="@+id/iv_cash_box"
                app:layout_constraintEnd_toEndOf="@+id/iv_cash_box"
                app:layout_constraintStart_toStartOf="@+id/iv_cash_box"
                app:layout_constraintTop_toTopOf="@+id/iv_cash_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="-"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/iv_cash_box_gray"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_cash" />

            <ImageView
                android:id="@+id/iv_cash_box_gray"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/join_input_box"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cart_cash"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_cash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="0"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_cash_box_gray"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_cash" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_coupon_box"
                app:layout_constraintTop_toTopOf="@+id/tv_cart_cash" />

            <View
                android:id="@+id/divider_cash"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="40dp"
                android:background="@color/divider_f2f2f2"
                app:layout_constraintTop_toBottomOf="@+id/tv_cart_cash" />

            <TextView
                android:id="@+id/text_all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:text="총 결제금액"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_cash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_price"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_all_price"
                app:layout_constraintEnd_toStartOf="@+id/tv_all_text"
                app:layout_constraintTop_toTopOf="@+id/text_all_price" />

            <TextView
                android:id="@+id/tv_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="원"
                android:textColor="@color/bottom_main_b"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_all_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_all_price" />

            <View
                android:id="@+id/divider_all_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="22dp"
                android:background="@color/main_bold_divider"
                app:layout_constraintTop_toBottomOf="@+id/text_all_price" />

            <!--요청사항-->
            <TextView
                android:id="@+id/tv_req_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="요청사항"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_all_price" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/arrow_low_blue"
                app:layout_constraintBottom_toBottomOf="@+id/tv_req_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_req_text" />

            <!--가게 사장님에게-->
            <TextView
                android:id="@+id/tv_req_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="가게 사장님에게"
                android:textColor="@color/bottom_main_b"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_req_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_req_text" />

            <ImageView
                android:id="@+id/iv_req_store"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/button_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_req_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="예) 견과류는 빼주세요"
                android:textColor="@color/bottom_text_w"
                app:layout_constraintBottom_toBottomOf="@+id/iv_req_store"
                app:layout_constraintStart_toStartOf="@+id/iv_req_store"
                app:layout_constraintTop_toTopOf="@+id/iv_req_store" />

            <CheckBox
                android:id="@+id/cart_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:button="@drawable/custom_checkbox"
                app:layout_constraintStart_toStartOf="@+id/iv_req_store"
                app:layout_constraintTop_toBottomOf="@+id/iv_req_store" />

            <TextView
                android:id="@+id/tv_spoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
